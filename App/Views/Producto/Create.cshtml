@model App.ViewModels.ProductoViewModel

@{
    ViewData["Title"] = "Crear Producto";

}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="Create">
    <div class="form-group">
        <label for="name">Nombre</label>
        <input type="text" class="form-control" id="name" name="Nombre" required>
    </div>
    <div class="form-group">
        <label for="price">Precio</label>
        <input type="number" class="form-control" id="price" name="Precio" required>
    </div>
    <div class="form-group">
        <label for="categoryId">ID de Categoría</label>
        <input type="number" class="form-control" id="categoryId" name="CategoriaId" required>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
</form>
